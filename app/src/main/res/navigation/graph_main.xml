<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_main"
    app:startDestination="@id/initialFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.LogInFragment"
        android:label="LogInFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_logInFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@+id/logInFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment"
            app:popUpTo="@+id/startFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_startFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@+id/startFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.TutorialFragment"
        android:label="TutorialFragment"
        tools:layout="@layout/fragment_tutorial">
        <action
            android:id="@+id/action_tutorialFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@+id/tutorialFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@+id/signUpFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signUpFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/initialFragment"
        android:name="com.noteappbymantushnikita.mobile.ui.InitialFragment"
        android:label="InitialFragment" >
        <action
            android:id="@+id/action_initialFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@+id/initialFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_initialFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@+id/initialFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_initialFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@+id/initialFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>