<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewLogo">
        <item name="android:textSize">@dimen/app_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="TextViewLogo.normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/tutor_title_text_size</item>
    </style>

    <style name="LogInSignUpTitle">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Login">
        <item name="android:layout_marginBottom">@dimen/dp_70</item>
    </style>
    <style name="Login.bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DiscoverPlatformButton">
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="LoginEditText">
        <item name="backgroundTint">@color/field_color</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/dp_14</item>
        <item name="android:layout_marginBottom">-5dp</item>
    </style>
    <style name="LoginEditText.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/field_color</item>
    </style>
    <style name="LoginEditText.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/field_color</item>
    </style>

    <!--Add new/Logout/Back buttons-->
    <style name="TextViewAction">
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
    </style>

    <style name="AddNoteTitle" parent="LogInSignUpTitle">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileTitle">
        <item name="android:textSize">@dimen/dp_50</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>